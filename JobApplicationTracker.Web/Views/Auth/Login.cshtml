@model JobApplicationTracker.Application.Models.LogInModel

@{
    ViewData["Title"] = "Sign In";

}

@if (TempData.ContainsKey("SuccessMessage") && TempData["SuccessMessage"] != null)
{
    <div class="success-flush-message">
        @TempData["SuccessMessage"]
    </div>
}

<h1>Sign in</h1>
<hr />

<form asp-action="Login" asp-controller="Auth" method="post">
    <div asp-validation-summary="ModelOnly" class="error-message"></div>

    <label asp-for="Username"></label>
    <br>
    <input asp-for="Username" type="text" />
    <br>

    <label asp-for="Password"></label>
    <br>
    <input asp-for="Password" type="password"/>
    <br>

    <input type="submit" name="Sign In" value="Sign In" />
</form>
